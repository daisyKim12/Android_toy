<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:elevation="3dp">

    <TextView
        android:id="@+id/cd_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="앱에서 작성하던 글이 있습니다."
        android:textColor="#3E3E3E"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/cd_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이어 쓰시겠습니까?"
        android:textColor="#3E3E3E"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/cv_view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cd_tv"
        android:layout_marginBottom="18dp"/>

    <View
        android:id="@+id/cv_view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="36dp"
        android:background="@color/line_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/cv_view2"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/line_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_view1" />

    <TextView
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        android:textColor="#4859B8"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cv_view2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cv_view2"
        android:layout_margin="12dp"/>

    <TextView
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이어쓰기"
        android:textColor="#4859B8"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cv_view2"
        app:layout_constraintTop_toTopOf="@+id/cv_view2"
        android:layout_margin="12dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>