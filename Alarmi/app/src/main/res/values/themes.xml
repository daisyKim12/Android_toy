<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Alarmi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Alarmi.NoActionbar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="FabTimePickerStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="title">false</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#FFFFFFFF</item>
        <item name="android:textSize">25sp</item>
        <item name="background">@color/transparent</item>
    </style>

    <style name="FabSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/black_light</item>
        <item name="android:progressTint">@color/dialog_blue</item>
        <item name="android:thumbTint">@color/dialog_blue</item>
    </style>
</resources>